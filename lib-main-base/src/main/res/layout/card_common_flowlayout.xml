<?xml version="1.0" encoding="utf-8"?>
<com.dexafree.materialList.card.CardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    style="@style/MainLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mSegmentingLineTv"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/common_bg"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/medication_suggestion_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                tools:text="支付方式"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="10dip"
                tools:text="支付方式"/>

        </RelativeLayout>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/mTagFlowLayout"
            zhy:max_select="-1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
        </com.zhy.view.flowlayout.TagFlowLayout>

    </LinearLayout>

</com.dexafree.materialList.card.CardLayout>